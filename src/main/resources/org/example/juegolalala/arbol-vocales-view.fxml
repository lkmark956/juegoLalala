   <!-- Botón para volver al menú -->
   <Button layoutX="1100.0" layoutY="20.0" mnemonicParsing="false" onAction="#volverAlMenu" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;             -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Volver al Menú" />

   
