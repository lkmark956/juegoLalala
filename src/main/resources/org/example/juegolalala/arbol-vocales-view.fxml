   <!-- Vocal I - derecha media-alta -->
   <ImageView fx:id="sombra3" fitHeight="300.0" fitWidth="300.0" layoutX="593.0" layoutY="215.0" opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
