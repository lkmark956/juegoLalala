   </ImageView>
   
   <ImageView fx:id="letraO" fitHeight="230.0" fitWidth="230.0" layoutX="135.0" layoutY="221.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_letras/O.png" />
