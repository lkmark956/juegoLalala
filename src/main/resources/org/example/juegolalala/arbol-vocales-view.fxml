   <!-- Vocal U - derecha media-baja -->
   <ImageView fx:id="sombra5" fitHeight="300.0" fitWidth="300.0" layoutX="660.0" layoutY="325.0" opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Vocales en el recuadro izquierdo -->
