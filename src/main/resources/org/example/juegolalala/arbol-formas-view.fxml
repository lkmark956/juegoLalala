               layoutX="990.0" layoutY="488.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Formas en el recuadro izquierdo -->
    <ImageView fx:id="cuadrado" fitHeight="345.0" fitWidth="345.0"
               layoutX="14.0" layoutY="105.0"
               pickOnBounds="true" preserveRatio="true">
