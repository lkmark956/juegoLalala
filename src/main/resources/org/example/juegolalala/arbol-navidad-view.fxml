<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.juegolalala.ArbolNumerosController">
   
   <!-- Imagen del árbol con sombras (sombra2) -->
   <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="false">
      <Image url="@img/arbol_navidad/arbol_navidad(sombra2).png" />
   </ImageView>
   
   <!-- Sombras (zonas donde colocar los números) - Ajustadas según imagen sombra2 -->
   <!-- Número 1 - arriba centro del árbol -->
   <ImageView fx:id="sombra1" fitHeight="100.0" fitWidth="140.0" layoutX="697.0" layoutY="390.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 2 - izquierda media-alta -->
   <ImageView fx:id="sombra2" fitHeight="130.0" fitWidth="120.0" layoutX="600.0" layoutY="290.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 3 - derecha media-alta -->
   <ImageView fx:id="sombra3" fitHeight="130.0" fitWidth="120.0" layoutX="773.0" layoutY="285.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 4 - izquierda media-baja -->
   <ImageView fx:id="sombra4" fitHeight="130.0" fitWidth="120.0" layoutX="567.0" layoutY="410.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 5 - derecha media-baja -->
   <ImageView fx:id="sombra5" fitHeight="130.0" fitWidth="120.0" layoutX="800.0" layoutY="395.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Números en el recuadro izquierdo - mismo tamaño que sombras -->
   <ImageView fx:id="numero1" fitHeight="100.0" fitWidth="140.0" layoutX="17.0" layoutY="150.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/copo_nieve.png" />
   </ImageView>
   
   <ImageView fx:id="numero2" fitHeight="140.0" fitWidth="180.0" layoutX="155.0" layoutY="120.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/papa_noel.png" />
   </ImageView>
   
   <ImageView fx:id="numero3" fitHeight="130.0" fitWidth="180.0" layoutX="9.0" layoutY="271.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/Reno.png" />
   </ImageView>
   
   <ImageView fx:id="numero4" fitHeight="130.0" fitWidth="180.0" layoutX="155.0" layoutY="271.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/regalo.png" />
   </ImageView>
   
   <ImageView fx:id="numero5" fitHeight="130.0" fitWidth="180.0" layoutX="9.0" layoutY="422.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/campana.png" />
   </ImageView>
   
   <!-- Botón para volver al menú -->
   <Button layoutX="1100.0" layoutY="20.0" mnemonicParsing="false" onAction="#volverAlMenu" 
           prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; 
           -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Volver al Menú" />
   
</Pane>
