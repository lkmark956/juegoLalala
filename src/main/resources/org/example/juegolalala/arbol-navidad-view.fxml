<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.juegolalala.ArbolNavidadController">
   
   <!-- Imagen del árbol con sombras (sombra2) -->
   <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false">
      <Image url="@img/arbol_navidad/arbol_navidad(sombra2).png" />
   </ImageView>
   
   <!-- Sombras (zonas donde colocar los objetos) - Ajustadas según imagen sombra2 -->
   <!-- Copo de nieve - arriba centro del árbol -->
   <ImageView fx:id="sombra1" fitHeight="150.0" fitWidth="210.0" layoutX="1046.0" layoutY="585.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Papa Noel - izquierda media-alta -->
   <ImageView fx:id="sombra2" fitHeight="195.0" fitWidth="180.0" layoutX="900.0" layoutY="435.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Reno - derecha media-alta -->
   <ImageView fx:id="sombra3" fitHeight="195.0" fitWidth="180.0" layoutX="1160.0" layoutY="428.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Regalo - izquierda media-baja -->
   <ImageView fx:id="sombra4" fitHeight="195.0" fitWidth="180.0" layoutX="851.0" layoutY="615.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Campana - derecha media-baja -->
   <ImageView fx:id="sombra5" fitHeight="195.0" fitWidth="180.0" layoutX="1200.0" layoutY="593.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Objetos navideños en el recuadro izquierdo -->
   <ImageView fx:id="numero1" fitHeight="150.0" fitWidth="210.0" layoutX="26.0" layoutY="225.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/copo_nieve.png" />
   </ImageView>
   
   <ImageView fx:id="numero2" fitHeight="210.0" fitWidth="270.0" layoutX="233.0" layoutY="180.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/papa_noel.png" />
   </ImageView>
   
   <ImageView fx:id="numero3" fitHeight="195.0" fitWidth="270.0" layoutX="14.0" layoutY="407.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/Reno.png" />
   </ImageView>
   
   <ImageView fx:id="numero4" fitHeight="195.0" fitWidth="270.0" layoutX="233.0" layoutY="407.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/regalo.png" />
   </ImageView>
   
   <ImageView fx:id="numero5" fitHeight="195.0" fitWidth="270.0" layoutX="14.0" layoutY="633.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_navidad/campana.png" />
   </ImageView>
   
   <!-- Botón para volver al menú -->
   <Button layoutX="1650.0" layoutY="30.0" mnemonicParsing="false" onAction="#volverAlMenu" 
           prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; 
           -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Volver al Menú" />
   
</Pane>
