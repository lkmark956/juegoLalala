<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="720.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.juegolalala.ArbolNumerosController">

    <!-- Fondo -->
    <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="false">
        <Image url="@img/arbol_numeros/arbol_numeros(sombra2).png" />
    </ImageView>

    <!-- Sombras -->
    <ImageView fx:id="sombra1" fitHeight="230" fitWidth="230" layoutX="653" layoutY="115" opacity="0.3" pickOnBounds="true" preserveRatio="true"/>
    <ImageView fx:id="sombra2" fitHeight="230" fitWidth="230" layoutX="570" layoutY="221" opacity="0.3" pickOnBounds="true" preserveRatio="true"/>
    <ImageView fx:id="sombra3" fitHeight="230" fitWidth="230" layoutX="729" layoutY="223" opacity="0.3" pickOnBounds="true" preserveRatio="true"/>
    <ImageView fx:id="sombra4" fitHeight="230" fitWidth="230" layoutX="519" layoutY="339" opacity="0.3" pickOnBounds="true" preserveRatio="true"/>
    <ImageView fx:id="sombra5" fitHeight="230" fitWidth="230" layoutX="656" layoutY="339" opacity="0.3" pickOnBounds="true" preserveRatio="true"/>

    <!-- Números a la izquierda -->
    <ImageView fx:id="numero1" layoutX="9" layoutY="70" fitHeight="230" fitWidth="230" pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_numeros/1.png"/>
    </ImageView>

    <ImageView fx:id="numero2" layoutX="155" layoutY="70" fitHeight="230" fitWidth="230" pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_numeros/2.png"/>
    </ImageView>

    <ImageView fx:id="numero3" layoutX="9" layoutY="221" fitHeight="230" fitWidth="230" pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_numeros/3.png"/>
