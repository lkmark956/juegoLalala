<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.juegolalala.ArbolNumerosController">
   
   <!-- Imagen del árbol con sombras (sombra2) -->
   <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="false">
      <Image url="@img/arbol_numeros/arbol_numeros(sombra2).png" />
   </ImageView>
   
   <!-- Sombras (zonas donde colocar los números) - Ajustadas según imagen sombra2 -->
   <!-- Número 1 - arriba centro del árbol -->
   <ImageView fx:id="sombra1" fitHeight="230.0" fitWidth="230.0" layoutX="653.0" layoutY="115.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 2 - izquierda media-alta -->
   <ImageView fx:id="sombra2" fitHeight="230.0" fitWidth="230.0" layoutX="570.0" layoutY="221.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 3 - derecha media-alta -->
   <ImageView fx:id="sombra3" fitHeight="230.0" fitWidth="230.0" layoutX="729.0" layoutY="223.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 4 - izquierda media-baja -->
   <ImageView fx:id="sombra4" fitHeight="230.0" fitWidth="230.0" layoutX="519.0" layoutY="339.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Número 5 - derecha media-baja -->
   <ImageView fx:id="sombra5" fitHeight="230.0" fitWidth="230.0" layoutX="656.0" layoutY="339.0" 
              opacity="0.3" pickOnBounds="true" preserveRatio="true" />
   
   <!-- Números en el recuadro izquierdo - mismo tamaño que sombras -->
   <ImageView fx:id="numero1" fitHeight="230.0" fitWidth="230.0" layoutX="9.0" layoutY="70.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_numeros/1.png" />
   </ImageView>
   
   <ImageView fx:id="numero2" fitHeight="230.0" fitWidth="230.0" layoutX="155.0" layoutY="70.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_numeros/2.png" />
   </ImageView>
   
   <ImageView fx:id="numero3" fitHeight="230.0" fitWidth="230.0" layoutX="9.0" layoutY="221.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_numeros/3.png" />
   </ImageView>
   
   <ImageView fx:id="numero4" fitHeight="230.0" fitWidth="230.0" layoutX="155.0" layoutY="221.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_numeros/4.png" />
   </ImageView>
   
   <ImageView fx:id="numero5" fitHeight="230.0" fitWidth="230.0" layoutX="9.0" layoutY="372.0" 
              pickOnBounds="true" preserveRatio="true">
      <Image url="@img/arbol_numeros/5.png" />
   </ImageView>
   
   <!-- Botón para volver al menú -->
   <Button layoutX="1100.0" layoutY="20.0" mnemonicParsing="false" onAction="#volverAlMenu" 
           prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; 
           -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Volver al Menú" />
   
</Pane>
