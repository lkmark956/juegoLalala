    <!-- Botón sombra5 -->
    <Button fx:id="btnSombra5"
            layoutX="739" layoutY="407"
            prefHeight="94" prefWidth="65"
            opacity="0.0"
            mnemonicParsing="false"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra5"/>

</Pane>
