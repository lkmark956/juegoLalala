    <!-- Botón sombra5 -->
    <Button fx:id="btnSombra5"
            layoutX="1109" layoutY="611"
            prefHeight="141" prefWidth="98"
            opacity="0.0"
            mnemonicParsing="false"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra5"/>

</Pane>
