    <ImageView fx:id="numero4" layoutX="155" layoutY="221" fitHeight="230" fitWidth="230" pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_numeros/4.png"/>
    </ImageView>

    <ImageView fx:id="numero5" layoutX="9" layoutY="372" fitHeight="230" fitWidth="230" pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_numeros/5.png"/>
    </ImageView>

    <!-- Botón volver -->
    <Button layoutX="1100" layoutY="20" mnemonicParsing="false"
            onAction="#volverAlMenu"
            prefHeight="50" prefWidth="150"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;
                   -fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-background-radius: 10;"
            text="Volver al Menú"/>

    <!-- BOTONES INVISIBLES (clicables) -->

    <!-- Botón sombra1 -->
    <Button fx:id="btnSombra1"
            layoutX="742" layoutY="175"
            prefHeight="88" prefWidth="52"
            opacity="0.0"
            mnemonicParsing="false"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra1"/>

    <!-- Botón sombra2 -->
    <Button fx:id="btnSombra2"
            layoutX="652" layoutY="293"
            prefHeight="88" prefWidth="65"
            opacity="0.0"
            mnemonicParsing="false"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra2"/>

    <!-- Botón sombra3 -->
    <Button fx:id="btnSombra3"
            layoutX="805" layoutY="294"
            prefHeight="88" prefWidth="78"
