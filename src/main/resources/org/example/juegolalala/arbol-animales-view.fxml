<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="720.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.juegolalala.ArbolAnimalesController">

    <!-- Fondo: árbol con los huecos (solo imagen plana) -->
    <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="false">
        <Image url="@img/arbol_animales/Arbol_Animal_Sombra2.png" />
    </ImageView>

    <!-- Sombras / posiciones sobre el árbol -->
    <!-- Perro - arriba centro del árbol -->
    <ImageView fx:id="sombra1" fitHeight="230.0" fitWidth="230.0"
               layoutX="513.0" layoutY="115.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Conejo - izquierda media-alta -->
    <ImageView fx:id="sombra2" fitHeight="230.0" fitWidth="230.0"
               layoutX="465.0" layoutY="230.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Pájaro - derecha media-alta -->
    <ImageView fx:id="sombra3" fitHeight="230.0" fitWidth="230.0"
               layoutX="604.0" layoutY="203.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Gato - izquierda media-baja -->
    <ImageView fx:id="sombra4" fitHeight="230.0" fitWidth="230.0"
               layoutX="400.0" layoutY="340.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Pez - derecha media-baja -->
    <ImageView fx:id="sombra5" fitHeight="230.0" fitWidth="230.0"
               layoutX="636.0" layoutY="323.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Animales en el recuadro de la izquierda -->
    <ImageView fx:id="perro" fitHeight="230.0" fitWidth="230.0"
               layoutX="9.0" layoutY="70.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Perro.png" />
    </ImageView>

    <ImageView fx:id="pajaro" fitHeight="230.0" fitWidth="230.0"
               layoutX="155.0" layoutY="70.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Pajaro.png" />
    </ImageView>

    <ImageView fx:id="conejo" fitHeight="230.0" fitWidth="230.0"
               layoutX="9.0" layoutY="221.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Conejo.png" />
    </ImageView>

    <ImageView fx:id="pez" fitHeight="230.0" fitWidth="230.0"
               layoutX="155.0" layoutY="221.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Pez.png" />
    </ImageView>

    <ImageView fx:id="gato" fitHeight="230.0" fitWidth="230.0"
               layoutX="9.0" layoutY="372.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Gato.png" />
    </ImageView>

    <!-- Botón para volver al menú -->
    <Button layoutX="1100.0" layoutY="20.0"
            mnemonicParsing="false"
            onAction="#volverAlMenu"
            prefHeight="50.0" prefWidth="150.0"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;
                   -fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-background-radius: 10;"
            text="Volver al Menú" />

    <!-- Botones invisibles sobre cada sombra -->
    <Button fx:id="btnSombra1"
            layoutX="583.0" layoutY="199.0"
            prefHeight="62.0" prefWidth="90.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra1" />

    <Button fx:id="btnSombra2"
            layoutX="538.0" layoutY="300.0"
            prefHeight="80.0" prefWidth="72.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra2" />

    <Button fx:id="btnSombra3"
            layoutX="664.0" layoutY="302.0"
            prefHeight="62.0" prefWidth="79.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra3" />

    <Button fx:id="btnSombra4"
            layoutX="465.0" layoutY="413.0"
            prefHeight="62.0" prefWidth="79.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra4" />

    <Button fx:id="btnSombra5"
            layoutX="698.0" layoutY="413.0"
            prefHeight="62.0" prefWidth="90.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra5" />

</Pane>
