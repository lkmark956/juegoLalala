<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="1080.0" prefWidth="1920.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.juegolalala.ArbolAnimalesController">

    <!-- Fondo: árbol con los huecos (solo imagen plana) -->
    <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false">
        <Image url="@img/arbol_animales/Arbol_Animal_Sombra2.png" />
    </ImageView>

    <!-- Sombras / posiciones sobre el árbol -->
    <!-- Perro - arriba centro del árbol -->
    <ImageView fx:id="sombra1" fitHeight="345.0" fitWidth="345.0"
               layoutX="770.0" layoutY="173.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Conejo - izquierda media-alta -->
    <ImageView fx:id="sombra2" fitHeight="345.0" fitWidth="345.0"
               layoutX="698.0" layoutY="345.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Pájaro - derecha media-alta -->
    <ImageView fx:id="sombra3" fitHeight="345.0" fitWidth="345.0"
               layoutX="906.0" layoutY="305.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Gato - izquierda media-baja -->
    <ImageView fx:id="sombra4" fitHeight="345.0" fitWidth="345.0"
               layoutX="600.0" layoutY="510.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Pez - derecha media-baja -->
    <ImageView fx:id="sombra5" fitHeight="345.0" fitWidth="345.0"
               layoutX="954.0" layoutY="485.0"
               opacity="0.3" pickOnBounds="true" preserveRatio="true" />

    <!-- Animales en el recuadro de la izquierda -->
    <ImageView fx:id="perro" fitHeight="345.0" fitWidth="345.0"
               layoutX="14.0" layoutY="105.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Perro.png" />
    </ImageView>

    <ImageView fx:id="pajaro" fitHeight="345.0" fitWidth="345.0"
               layoutX="233.0" layoutY="105.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Pajaro.png" />
    </ImageView>

    <ImageView fx:id="conejo" fitHeight="345.0" fitWidth="345.0"
               layoutX="14.0" layoutY="332.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Conejo.png" />
    </ImageView>

    <ImageView fx:id="pez" fitHeight="345.0" fitWidth="345.0"
               layoutX="233.0" layoutY="332.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Pez.png" />
    </ImageView>

    <ImageView fx:id="gato" fitHeight="345.0" fitWidth="345.0"
               layoutX="14.0" layoutY="558.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@img/arbol_animales/Gato.png" />
    </ImageView>

    <!-- Botón para volver al menú -->
    <Button layoutX="1650.0" layoutY="30.0"
            mnemonicParsing="false"
            onAction="#volverAlMenu"
            prefHeight="50.0" prefWidth="150.0"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;
                   -fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-background-radius: 10;"
            text="Volver al Menú" />

    <!-- Botones invisibles sobre cada sombra -->
    <Button fx:id="btnSombra1"
            layoutX="875.0" layoutY="299.0"
            prefHeight="93.0" prefWidth="135.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra1" />

    <Button fx:id="btnSombra2"
            layoutX="807.0" layoutY="450.0"
            prefHeight="120.0" prefWidth="108.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra2" />

    <Button fx:id="btnSombra3"
            layoutX="996.0" layoutY="453.0"
            prefHeight="93.0" prefWidth="119.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra3" />

    <Button fx:id="btnSombra4"
            layoutX="698.0" layoutY="620.0"
            prefHeight="93.0" prefWidth="119.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra4" />

    <Button fx:id="btnSombra5"
            layoutX="1047.0" layoutY="620.0"
            prefHeight="93.0" prefWidth="135.0"
            mnemonicParsing="false"
            opacity="0.0"
            style="-fx-background-color: transparent; -fx-cursor: hand;"
            onAction="#clickSombra5" />

</Pane>
