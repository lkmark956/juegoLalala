<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="org.example.juegolalala.VictoriaController"
           prefHeight="1080.0" prefWidth="1920.0" alignment="CENTER">
   
   <!-- Fondo semi-transparente -->
   <Rectangle width="1920.0" height="1080.0" fill="#000000" opacity="0.7" />
   
   <!-- Contenido del mensaje -->
   <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #4CAF50; -fx-background-radius: 20; -fx-padding: 50;">
      <Label text="¡Bien hecho!" style="-fx-font-size: 60px; -fx-font-weight: bold; -fx-text-fill: white;" />
      
      <Button text="Volver al Menú" onAction="#volverAlMenu" 
              style="-fx-font-size: 24px; -fx-padding: 20 40; -fx-background-color: white; 
                     -fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-background-radius: 15; -fx-cursor: hand;" />
   </VBox>
   
</StackPane>
